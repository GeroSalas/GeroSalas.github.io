{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react-hooks/recommended", "plugin:prettier/recommended", "prettier"],
    "globals": {
        "it": false,
        "process": false,
        "require": false,
        "module": false
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "prettier/prettier": "warn",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }]
    }
}